{
  "name": "@ctt/crud-api",
  "version": "1.5.0",
  "description": "A microservice boilerplate",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn clean:build && tsc",
    "postbuild": "prettier --write lib/**/**/*.*s",
    "build:watch": "yarn run clean:build && yarn run build --watch src",
    "bootstrap": "nodemon --delay 250ms --exec NODE_ENV=development ts-node -- src/bootstrap.ts",
    "dev": "nodemon --delay 250ms --exec NODE_ENV=development ts-node -- src/index.ts",
    "clean": "concurrently 'rimraf node_modules' 'rimraf lib/*'",
    "clean:build": "rm -rf lib/*",
    "lint": "eslint 'src/**/**/*.ts'",
    "lint:ci": "eslint 'src/**/*.ts' --format junit -o test/reports/junit/js-lint-results.xml",
    "postinstall": "[ \"$NODE_ENV\" == production ] && exit 0; yarn clean:build;",
    "prepublish": "NODE_ENV=production yarn build",
    "pretest": "yarn lint",
    "start": "node lib/index.js",
    "test": "jest --runInBand",
    "test:ci": "jest --coverage --reporters=default --reporters=jest-junit --coverageReporters=text-lcov | coveralls",
    "test:watch": "yarn test --watch",
    "validate": "npm ls"
  },
  "files": [
    "lib"
  ],
  "jest-junit": {
    "outputDirectory": "./test/reports/junit",
    "outputName": "./js-test-results.xml"
  },
  "devDependencies": {
    "@types/convict": "4.2.1",
    "@types/hapi": "18.0.3",
    "@types/jest": "^25.1.3",
    "@types/joi": "14.3.4",
    "@types/mongoose": "5.7.1",
    "@types/mongoose-paginate": "5.0.8",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "@typescript-eslint/typescript-estree": "2.30.0",
    "concurrently": "3.5.1",
    "coveralls": "3.0.9",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "3.1.2",
    "factory-girl": "5.0.4",
    "hapi-auth-jwt2": "8.1.0",
    "husky": "4.2.3",
    "inert": "5.1.0",
    "jest": "25.1.0",
    "jest-junit": "10.0.0",
    "lint-staged": "10.0.8",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-jest": "25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "vision": "5.3.3"
  },
  "dependencies": {
    "@hapi/hapi": "17.9.0",
    "convict": "4.3.1",
    "dotenv": "6.0.0",
    "good": "8.1.1",
    "good-console": "7.1.0",
    "good-squeeze": "5.1.0",
    "halson": "3.0.0",
    "hapi-require-https": "3.0.0",
    "hapi-swaggered": "3.0.2",
    "hapi-swaggered-ui": "3.0.2",
    "joi": "13.4.0",
    "knex": "0.19.5",
    "mongoose": "5.9.5",
    "mysql": "2.15.0",
    "ramda": "0.25.0",
    "uuid": "3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:jabdul/microservice-boilerplate.git#master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test"
    }
  },
  "lint-staged": {
    "**/*.{js, tsx, ts}": [
      "eslint --fix",
      "yarn test"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "npm@craftturf.com",
  "license": "SEE LICENSE IN <LICENSE>"
}
