{
  "name": "microservice-boilerplate",
  "version": "0.0.1",
  "description": "A microservice boilerplate",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib --ignore *.test*.js",
    "bootstrap": "nodemon --delay 250ms --exec NODE_ENV=development babel-node -- src/bootstrap.js",
    "dev": "nodemon --delay 250ms --exec NODE_ENV=development babel-node -- src/index.js",
    "clean": "concurrently 'rimraf node_modules' 'rimraf lib/*'",
    "flow": "flow check --all",
    "flow:dep": "flow-typed install",
    "lint": "eslint src",
    "postinstall": "[ \"$NODE_ENV\" == production ] && exit 0; yarn flow:dep",
    "prepublish": "yarn build",
    "pretest": "yarn lint",
    "start": "node lib/index.js",
    "test": "jest --config jest/test.config.json",
    "test:watch": "yarn test --watch",
    "validate": "npm ls"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "files": [
    "lib"
  ],
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^17.0.2",
    "babel-plugin-transform-class-properties": "^6.4.0",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^3.5.1",
    "convict": "^4.2.0",
    "dotenv": "^6.0.0",
    "eslint": "^3.12.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^21.15.0",
    "flow-bin": "^0.73.0",
    "flow-typed": "^2.4.0",
    "hapi-require-https": "^3.0.0",
    "hapi-swaggered": "^3.0.2",
    "hapi-swaggered-ui": "^3.0.2",
    "inert": "^5.1.0",
    "jest": "^17.0.3",
    "nodemon": "^1.11.0",
    "precommit-hook-eslint": "^3.0.0",
    "vision": "^5.3.3"
  },
  "dependencies": {
    "halson": "^3.0.0",
    "hapi": "^17.4.0",
    "joi": "^13.4.0",
    "knex": "^0.14.4",
    "mongoose": "^5.1.5",
    "mysql": "^2.15.0",
    "ramda": "^0.25.0",
    "uuid": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:jabdul/microservice-boilerplate.git#master"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "npm@craftturf.com",
  "license": "SEE LICENSE IN <LICENSE>"
}
