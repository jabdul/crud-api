{
  "name": "@ctt/crud-api",
  "version": "1.4.3",
  "description": "A microservice boilerplate",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib --ignore *.test*.js",
    "build:watch": "yarn run clean:build && yarn run build --watch src",
    "bootstrap": "nodemon --delay 250ms --exec NODE_ENV=development babel-node -- src/bootstrap.js",
    "dev": "nodemon --delay 250ms --exec NODE_ENV=development babel-node -- src/index.js",
    "clean": "concurrently 'rimraf node_modules' 'rimraf lib/*'",
    "clean:build": "rm -rf lib/*",
    "flow": "flow check --all",
    "flow:dep": "flow-typed install || exit 0",
    "lint": "eslint src",
    "lint:ci": "eslint src --format junit -o test/reports/junit/js-lint-results.xml",
    "postinstall": "[ \"$NODE_ENV\" == production ] && exit 0; yarn flow:dep;",
    "prepublish": "NODE_ENV=production yarn build",
    "pretest": "yarn lint",
    "start": "node lib/index.js",
    "test": "jest",
    "test:ci": "jest --coverage --reporters=default --reporters=jest-junit --coverageReporters=text-lcov | coveralls",
    "test:watch": "yarn test --watch",
    "validate": "npm ls"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "files": [
    "lib"
  ],
  "jest-junit": {
    "outputDirectory": "./test/reports/junit",
    "outputName": "./js-test-results.xml"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/node": "7.8.4",
    "@babel/plugin-transform-flow-strip-types": "7.8.3",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-flow": "7.8.3",
    "@babel/runtime": "7.8.4",
    "babel-eslint": "8.1.1",
    "babel-jest": "24.9.0",
    "concurrently": "3.5.1",
    "coveralls": "3.0.9",
    "database-cleaner": "1.3.0",
    "eslint": "4.18.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jest": "21.15.0",
    "factory-girl": "5.0.4",
    "flow-bin": "0.73.0",
    "flow-typed": "2.4.0",
    "hapi-auth-jwt2": "8.1.0",
    "inert": "5.1.0",
    "jest": "24.9.0",
    "jest-junit": "10.0.0",
    "nodemon": "1.11.0",
    "precommit-hook-eslint": "3.0.0",
    "vision": "5.3.3"
  },
  "dependencies": {
    "@hapi/hapi": "17.9.0",
    "convict": "4.3.1",
    "dotenv": "6.0.0",
    "good": "8.1.1",
    "good-console": "7.1.0",
    "good-squeeze": "5.1.0",
    "halson": "3.0.0",
    "hapi-require-https": "3.0.0",
    "hapi-swaggered": "3.0.2",
    "hapi-swaggered-ui": "3.0.2",
    "joi": "13.4.0",
    "knex": "0.19.5",
    "mongoose": "5.3.4",
    "mysql": "2.15.0",
    "ramda": "0.25.0",
    "uuid": "3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:jabdul/microservice-boilerplate.git#master"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "npm@craftturf.com",
  "license": "SEE LICENSE IN <LICENSE>"
}
